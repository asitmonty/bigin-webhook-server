# SaaS Template Framework Environment Configuration

# Application Configuration
APP_NAME=your-saas-app
NODE_ENV=development
PORT=3000

# Database Configuration
DATABASE_URL=postgresql://adminuser:password@localhost:5432/saas_template_db
DB_HOST=localhost
DB_PORT=5432
DB_NAME=saas_template_db
DB_USER=adminuser
DB_PASSWORD=password

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Authentication Configuration
JWT_SECRET=your-super-secret-jwt-key-here
AUTH_PROVIDER=auth0
ENABLE_MFA=true

# Auth0 Configuration
AUTH0_DOMAIN=your-domain.auth0.com
AUTH0_CLIENT_ID=your-auth0-client-id
AUTH0_CLIENT_SECRET=your-auth0-client-secret
AUTH0_AUDIENCE=your-auth0-audience

# Azure AD B2C Configuration (Alternative to Auth0)
AZURE_AD_B2C_TENANT_NAME=your-tenant-name
AZURE_AD_B2C_CLIENT_ID=your-azure-client-id
AZURE_AD_B2C_CLIENT_SECRET=your-azure-client-secret
AZURE_AD_B2C_POLICY_NAME=B2C_1_signupsignin

# OAuth Provider Configuration
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

MICROSOFT_CLIENT_ID=your-microsoft-client-id
MICROSOFT_CLIENT_SECRET=your-microsoft-client-secret

LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret

FACEBOOK_CLIENT_ID=your-facebook-client-id
FACEBOOK_CLIENT_SECRET=your-facebook-client-secret

ZOHO_CLIENT_ID=your-zoho-client-id
ZOHO_CLIENT_SECRET=your-zoho-client-secret

# Payment Configuration
PAYMENT_PROVIDER=stripe
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-stripe-webhook-secret

# Microsoft Partner Center Configuration
MICROSOFT_PARTNER_CENTER_CLIENT_ID=your-partner-center-client-id
MICROSOFT_PARTNER_CENTER_CLIENT_SECRET=your-partner-center-client-secret
MICROSOFT_PARTNER_CENTER_TENANT_ID=your-partner-center-tenant-id

# CRM Integration Configuration
ZOHO_CRM_CLIENT_ID=your-zoho-crm-client-id
ZOHO_CRM_CLIENT_SECRET=your-zoho-crm-client-secret

ZOHO_BIGIN_CLIENT_ID=your-zoho-bigin-client-id
ZOHO_BIGIN_CLIENT_SECRET=your-zoho-bigin-client-secret

SALESFORCE_CLIENT_ID=your-salesforce-client-id
SALESFORCE_CLIENT_SECRET=your-salesforce-client-secret
SALESFORCE_INSTANCE_URL=https://your-instance.salesforce.com

DYNAMICS_CLIENT_ID=your-dynamics-client-id
DYNAMICS_CLIENT_SECRET=your-dynamics-client-secret
DYNAMICS_INSTANCE_URL=https://your-instance.crm.dynamics.com

# Email Configuration
EMAIL_PROVIDER=sendgrid
SENDGRID_API_KEY=your-sendgrid-api-key
FROM_EMAIL=noreply@your-domain.com

# File Storage Configuration
STORAGE_PROVIDER=azure
AZURE_STORAGE_ACCOUNT_NAME=your-storage-account
AZURE_STORAGE_ACCOUNT_KEY=your-storage-account-key
AZURE_STORAGE_CONTAINER_NAME=uploads

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,https://your-domain.com

# Security Configuration
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret
COOKIE_SECRET=your-cookie-secret

# Monitoring Configuration
ENABLE_MONITORING=true
APPLICATION_INSIGHTS_CONNECTION_STRING=your-application-insights-connection-string

# Webhook Configuration
WEBHOOK_SECRET=your-webhook-secret
WEBHOOK_TIMEOUT=30000

# Multi-tenancy Configuration
ENABLE_MULTI_TENANCY=true
DEFAULT_TENANT_PLAN=free
TENANT_ISOLATION_MODE=database

# Feature Flags
ENABLE_ANALYTICS=true
ENABLE_REPORTING=true
ENABLE_SUPPORT=true
ENABLE_INTEGRATIONS=true
ENABLE_WEBHOOKS=true

# Development Configuration
ENABLE_DEBUG=true
ENABLE_SWAGGER=true
ENABLE_CORS=true

# Production Configuration (Override in production)
# NODE_ENV=production
# ENABLE_DEBUG=false
# ENABLE_SWAGGER=false
# LOG_LEVEL=warn